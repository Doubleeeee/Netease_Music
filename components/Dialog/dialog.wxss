/* components/Didlog/dialog.wxss */
.mask{
  position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.dialog{
   position: fixed; 
   z-index: 5000; 
   width: 100%; 
   height: 390rpx;
   bottom: 0;
   /* -webkit-transform: translate(-50%, -50%); 
   transform: translate(-50%, -50%);   */
   background-color: #FFFFFF; 
   text-align: center; 
   border-top-right-radius: 5px;
   border-top-left-radius: 5px; 
   overflow: hidden; 
   }
.dialog-title{
  height: 70rpx;
  border-bottom: 1rpx solid rgba(211, 205, 205, 0.3);
  font-size: 28rpx;
  text-align: left;
  color: rgb(161, 150, 150);
  padding-left: 20rpx;
  line-height: 70rpx
  }
.dialog-info .icon{
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx 0 0 20rpx;
}
.dialog-info .content{
float: left;
width: 85%;
height: 60rpx;
margin-top: 20rpx;
border-bottom: 0.1rpx solid rgba(211, 205, 205, 0.3);
text-align: left;
font-size: 25rpx;
padding-left: 20rpx;
line-height: 50rpx;
margin-left: 15rpx;
}
