/* pages/friend/friendTemp.wxss */
.show-container{
  border-top: 1px solid #F4F4F4;
  padding: 0 10px;
  font-family: serif;
}
.show-title{
  height: 65px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 15px;
}
.show-title image{
  flex-basis: 2.1rem;
  width: 2.1rem;
  height: 2.1rem;
  border-radius: 50%;
}
.show-title view{
  flex: 1;
  padding-left: 5px;
}
.show-title view text{
  color: #597C8A;
}
.show-title button{
  padding: 0;
  flex-basis: 75px;
  font-size: .7rem;
  color: #fff;
  height: 30px;
  border-radius: 20px;
  line-height: 30px;
  background-color: #E5473F;
}
.show-content{
  /* height: 496px; */
  margin-left: 2.1rem;
}
.main-video {
  width: 100%;
}
.main-picture{
  display: flex;
  /* justify-content: center; */
  justify-content: space-between;
  flex-wrap: wrap;
}
.main-picture image{
  flex-basis: 49%;
  width: 50%;
  border-radius: 10px;
  margin-bottom: 10px;
}
/* .main-music{
  padding: 5px;
  background-color: #f4f4f4;
} */
.main-music audio{
  border: none;
  background-color: #f4f4f4;
}

.content-datashow{
  display: flex;
  align-items: center;
  font-size: 38rpx;
  color: #9C9C9C;
}
.content-datashow image{
  width: 43rpx;
  height: 43rpx;
}
.datashow-more{
  flex-basis: 49%;
  border: none;
  background-color: #fff;
  text-align: right;
  outline: none;
}
.content-datashow view{
  flex: 1;
  vertical-align: middle;
}
.content-datashow view text{
  padding-left: 5px;
  margin-top: -3px;
}
.more-modle{
  position: fixed;
  top: 0;
  line-height: 30px;
  height: 100vh;
  width: 100%;
  background: rgba(107,103,104, .6);
  z-index: 6;
  
}
.more-modle view{
  margin: 50% auto 0;
  background: #fff;
  width: 60%;
  display: flex;
  flex-direction: column;
  height: auto;
  text-align: center;
  padding: 10px;
}
.prised-t{
  animation: animations .8s ease-in;
}
@keyframes animations{
	0%{transform:scale(1.6);}
	40%{transform:scale(1.34);}
	70%{transform:scale(1.12);}
	100%{transform:scale(1);}
}