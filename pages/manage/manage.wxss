/* pages/manage/manage.wxss */
.swiper-tab{
    width: 80%;
    margin: 0 auto;
    background-color: #df403a;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 40rpx;
    display: flex;
     position: fixed;
    justify-content: space-between;
    padding-left: 10%;
    padding-right: 10%
}
.swiper-tab-item{ 
    font-size: 25rpx;
    color:#ffffff;
}
.active{
    border-bottom: 4rpx solid #ffffff;
}
swiper{
  text-align: center;
  padding-top: 40rpx;
  height: 1000rpx;
  overflow: hidden
}
.play{
  height: 80rpx;
  width: 600rpx;
  text-align: left
}
.bothplay{
  height: 80rpx;
  border-bottom: 1rpx solid rgba(211, 205, 205, 0.3);
  margin-left: 20rpx;
}
.play image{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 10rpx
}
.play text{
  display: block;
  float: left;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 10rpx
}
.play text:nth-child(3){
  color: #DCDCDC
}